@page 
@using Website.Pages
@model HelloModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Welcome";
}

<h1>Hello world!</h1>
<h2>@Model.Message</h2>

<html>
    <body>
        <p>Sign Up</p>
        <div asp-validation-summary="All"></div>
        <form method="post">
            <div>First Name: <input asp-for="User.FirstName" /></div>
            <div>Last Name: <input asp-for="User.LastName" /></div>
            <div>Email: <input asp-for="User.Email" /></div>
            <input type="Submit" />
        </form>
    </body>
</html>

